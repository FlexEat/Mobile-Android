<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/food_item_picture"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/food_item_picture"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:id="@+id/food_item_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_item_name"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:id="@+id/food_item_price"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_item_description"
            android:textSize="12sp"
            android:layout_below="@id/food_item_price"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/food_item_description"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/food_restriction_container">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/warning"
                android:layout_gravity="center_vertical"
                android:id="@+id/food_restriction_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textSize="12sp"
                android:id="@+id/food_restriction_reason"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="16dp"
            android:id="@+id/quantity_picker"
            android:layout_below="@id/food_restriction_container">

            <Button
                android:id="@+id/decrease_quantity_button"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="-"/>

            <TextView
                android:id="@+id/quantity_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <Button
                android:id="@+id/increase_quantity_button"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="+"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity_picker"
            android:layout_centerHorizontal="true"
            android:text="Add to Order"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:theme="@style/materialButton"
            android:id="@+id/add_to_order_button"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>